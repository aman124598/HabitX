{
  "name": "habit-tracker",
  "version": "1.0.1",
  "private": true,
  "main": "expo-router/entry",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.19.4"
  },
  "scripts": {
    "start": "expo start",
    "start:remote": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "backend:dev": "cd backend && npm run dev",
    "typecheck": "tsc --noEmit",
    "build:android": "eas build --platform android --profile production-apk",
    "build:android:aab": "eas build --platform android --profile production-aab",
    "build:production": "npm run pre-build && eas build --platform android --profile production-aab",
    "pre-build": "cp .env.production .env && npm run typecheck",
    "deploy:android": "npm run build:production && eas submit --platform android --profile production-aab",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "health-check": "curl -f https://habit-tracker-backend-2.onrender.com/health || exit 1",
    "validate-env": "node scripts/validate-env.js"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "expo": "~54.0.30",
    "expo-background-fetch": "~14.0.9",
    "expo-blur": "~15.0.8",
    "expo-build-properties": "~1.0.10",
    "expo-constants": "~18.0.12",
    "expo-dev-client": "~6.0.20",
    "expo-document-picker": "~14.0.8",
    "expo-file-system": "~19.0.21",
    "expo-font": "~14.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-notifications": "~0.32.15",
    "expo-print": "~15.0.8",
    "expo-router": "~6.0.21",
    "expo-sharing": "~14.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-task-manager": "~14.0.9",
    "firebase": "^12.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-google-mobile-ads": "^15.7.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.10",
    "babel-preset-expo": "~54.0.9",
    "jest": "~29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "react-test-renderer": "^19.1.0",
    "strip-ansi": "^6.0.1",
    "typescript": "~5.9.2"
  }
}
