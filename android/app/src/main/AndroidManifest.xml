<manifest xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>
  <!-- OPTIONAL PERMISSIONS, REMOVE WHATEVER YOU DO NOT NEED -->
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
  <uses-permission android:name="android.permission.VIBRATE"/>
  <!-- These require runtime permissions on M -->
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <!-- END OPTIONAL PERMISSIONS -->

  <queries>
    <!-- Support checking for http(s) links via the Linking API -->
    <intent>
      <action android:name="android.intent.action.VIEW" />
      <category android:name="android.intent.category.BROWSABLE" />
      <data android:scheme="https" />
    </intent>
  </queries>

  <application android:name=".MainApplication" android:label="@string/app_name" android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher_round" android:allowBackup="false" android:theme="@style/AppTheme" android:supportsRtl="true">
    <!--
      Launcher aliases allow switching the home-screen icon by enabling/disabling
      the appropriate alias component at runtime. Ensure you add corresponding
      mipmap resources for ic_launcher_light and ic_launcher_dark before building.
    -->

    <!-- Default launcher alias (enabled by default) -->
    <activity-alias
      android:name=".LauncherAliasDefault"
      android:enabled="true"
      android:exported="true"
      android:targetActivity=".MainActivity"
      android:icon="@mipmap/ic_launcher">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

    <!-- Light mode launcher alias (disabled by default) -->
    <activity-alias
      android:name=".LauncherAliasLight"
      android:enabled="false"
      android:exported="true"
      android:targetActivity=".MainActivity"
      android:icon="@mipmap/ic_launcher_light">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

    <!-- Dark mode launcher alias (disabled by default) -->
    <activity-alias
      android:name=".LauncherAliasDark"
      android:enabled="false"
      android:exported="true"
      android:targetActivity=".MainActivity"
      android:icon="@mipmap/ic_launcher_dark">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity-alias>

    <!-- MainActivity (no LAUNCHER intent here; aliases provide launcher icons) -->
    <activity android:name=".MainActivity" android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|uiMode" android:launchMode="singleTask" android:windowSoftInputMode="adjustResize" android:theme="@style/Theme.App.SplashScreen" android:exported="true" />
  </application>
</manifest>
